class Solution
{
  public:
    int minOperation(int n)
    {
        //code here.
        int ct =0;
           while(n>0){
               if(n%2==0){
                   n=n/2;
                   ct++;
               }else{
                   n=n-1;
                   ct++;
               }
           }
           return ct;
    }
};
